<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_avatar_comment"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_avatar_comment"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/user_name_comment"/>
        <TextView
            android:id="@+id/content_comment"
            android:textSize="16sp"
            android:textColor="@color/quantum_black_100"
            android:layout_width="match_parent"
            android:layout_below="@+id/user_name_comment"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_comment_create_on"
            android:layout_below="@+id/content_comment"/>
    </RelativeLayout>

</RelativeLayout>